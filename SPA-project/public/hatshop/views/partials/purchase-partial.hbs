
<main>
            <div class="container">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                            <div class="card-body">
                                <h4 class="card-title">Purchase</h4>





                                 <div class="form-group">

                                        <input disabled type="text" class="form-control" id="usr" placeholder="{{user.address}}" >
                                 </div>

                                 <div class="form-group">

                                        <input disabled type="text" class="form-control" id="usr" placeholder="{{user.name}}">
                                 </div>

                                 <div class="form-group">

                                        <input disabled type="text" class="form-control" id="usr" placeholder="{{user.surname}}">
                                 </div>


                            </div>

                            <div class="card-body">
                                <h4 class="card-title">Order</h4>
                                 <table class="table">
                                    <thead>
                                      <tr>

                                        <th scope="col">Number</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Total</th>
                                        <th></th>
                                    </thead>
                                    <tbody>
                                        {{#each user.userOrders}}
                                        <tr>


                                        <td>{{this.number}}</td>
                                        <td>{{this.date}}</td>
                                        <td>{{this.total}}</td>
                                        <td> <a href="order-{{this.number}}" onclick="Controller.controllers.purchase.goToOrder_clicked(event)"> Details </a> </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                  </table>
                            </div>

                           <row>
                    <div class="col-lg-12 mb-4">
                        <h5>Subtotal € <span class="text-muted">23.99</span></h5>
                    </div>
                </row>
                <row>
                    <div class="col-lg-12 mb-4">
                        <h5>Tax € <span class="text-muted">5.00</span></h5>
                    </div>
                </row>
                <row>
                    <div class="col-lg-12 mb-4">
                        <h5>Total € <span class="text-muted">28.99</span></h5>
                    </div>
                </row>
                            <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary col-2 ">Checkout</button>
                        </div>

                            </div> </div></div>
                        </div></div>

                        </div> </div>


                </div>
            </div>
            <br><br>
        </main>
    </div>
